<% if user_signed_in? %>
<!--検索バーの中央寄せ-->
<div class="d-flex justify-content-center">
<div class="serch_form">
    <!--serch_pathルーティングに検索内容を渡している-->
    <%= form_with url: search_path,method: :get, local: true do |f| %>
    <!--ユーザーの入力した検索ワードはcontentとしてコントローラーのアクションに送られる-->
    <!--検索ワードはcontentで、検索対象はmodelで、検索方法はmethodでコントローラーに渡される-->
    <%= f.text_field :content %>
    <!--f.selectの記述でプルダウン（セレクトボックス）を作成-->
    <!--ユーザーか投稿（book）かを選択-->
    <%= f.select :model,options_for_select({"User"=>"user","Book"=>"book"})%>
    <!--({"完全一致"=>"perfect","前方一致"=>"forward"...この部分の記述は、"選択肢で表示する文字"=>DBに渡す値（保存させる内容）-->
    <%= f.select :method,options_for_select({"完全一致"=>"perfect","前方一致"=>"forward","後方一致"=>"backward","部分一致"=>"partial"})%>
    <%= f.submit'検索' %>
    <% end %>
</div>
</div>
<% end %>
